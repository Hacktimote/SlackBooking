<?xml version='1.0' encoding='utf-8'?>
<widget id="com.slackbooking.app" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Slack Booking</name>
    <description>
        An app that change the way to have meeting
    </description>
    
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="SplashScreen" value="screen" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="LoadingDialog" value="Schneider Electric" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="LoadingPageDialog" value=""/>
    <preference name="Orientation" value="default" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarBackgroundColor" value="#009530" />

    <platform name="android">
        <icon src="res/icon/icon.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
        <splash density="land-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
        <splash density="land-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
        <splash density="land-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
        <allow-intent href="market:*" />
        <access origin="http://hacktimote.site" />
    </platform>

    <platform name="ios">
        <icon src="res/icon/icon.png" />
        <splash height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
        <splash height="1334" src="res/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" src="res/screen/ios/Default-736h.png" width="1242" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <access origin="http://hacktimote.site" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Fullscreen" value="true" />
    </platform>


    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />


    <engine name="ios" spec="^3.8.0" />
    <plugin name="cordova-plugin-networkactivityindicator" spec="~0.1.1" />
    <plugin name="cordova-plugin-x-toast" spec="~2.2.3" />
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.0.0" />
    <plugin name="cordova-plugin-vibration" spec="~2.0.0" />
    <plugin name="phonegap-plugin-push" spec="~1.4.5" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
    <plugin name="cordova-plugin-local-notifications" spec="~0.8.1" />
    <plugin name="cordova-plugin-ibeacon" spec="~3.3.0" />


    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />

</widget>
